programa {
  funcao inicio() {

    //variaveis
 real nota1
 real nota2
 real nota3
 real media
 cadeia nome

 //informações do aluno
 escreva ("Nome do aluno: ")
 leia (nome)

//nota aluno
escreva (" Informe a primeira nota: ")
leia ( nota1 )
escreva (" Informe a segunda nota: ")
leia ( nota2 )
escreva (" Informe a terceira nota: ")
leia ( nota3 )

//processamento
media =( nota1 + nota2 + nota3) / 3

//saida
escreva (" A media do aluno, ", nome, " é: ", media)
  }
}
